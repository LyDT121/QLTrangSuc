
@{
    ViewBag.Title = "Products";
}
<div id="main">

    <div class=head style="width: 100%;height: 55px; display: flex;">
        <div class="sort" style="height: 55px;width: 150px;padding-top: 15px;padding-left: 740px;">
            <select name="sort-price" id="sort-price" style="height:35px;width:150px;" ng-model="sortcolumn">
                <option value="TenSP">Tên sản phẩm</option>
                <option value="MaSP" selected="selected">Mã sản phẩm</option>
            </select>
        </div>
        <div>
            Sorting direction:
            <input type="button" value="{{dr}}" ng-click="Chon(dr)" />
        </div>
    </div>

    <div style="width:25%;height:35px; color: #6E573D; position: relative">
        <label style="padding-left:20px;line-height: 40px; font-size: 25px"><b>GỢI Ý CHO BẠN</b></label>
    </div>
    <div style='width: 30%;height: 2.5px; background-color: #6E573D; margin-left:20px; '></div>

    <div class="ListProducts" ng-controller="ProductsController">
        <div class="col-3 col-m-6 col-s-12" ng-repeat="s in ListProducts">
            <div id="0" class="spnoibat col-3 col-m-3 col-s-6" >
                <img class="product-img" src="~/assets/images/{{s.Image}}" alt="">
                <a  ng-click="" href="/DetailProducts/Index"><lable class="product-name">{{s.ProductName}}</label></a>
                <label class="price">{{s.Price}}</label>
                <input type="button" class="btn_buy" value="CHỌN MUA"></input>
            </div>
        </div>
        

        <div style="clear: both"></div>
        <script src="~/assets/js/Ex.js"></script>
    </div>
</div>


@section js{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Controller/Angular.js"></script>
    <script src="~/assets/js/Ex.js"></script>
}

