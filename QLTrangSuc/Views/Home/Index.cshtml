@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id='row' ng-app="HomeApp">
    <div id="search-re" style="height: 1500px;display: none;">
    </div>
    <div id="main">

        <div class=head style="width: 100%;height: 55px; display: flex;">
            <div class="sort" style="height: 55px;width: 150px;padding-top: 15px;padding-left: 740px;">
                <select name="sort-price" id="sort-price" style="height:35px;width:150px;" ng-model="sortcolumn">
                    <option value="TenSP">Tên sản phẩm</option>
                    <option value="MaSP" selected="selected">Mã sản phẩm</option>
                </select>
            </div>
            <div>
                Sorting direction:
                <input type="button" value="{{dr}}" ng-click="Chon(dr)" />
            </div>
        </div>

        <div style="width:25%;height:35px; color: #6E573D; position: relative">
            <label style="padding-left:20px;line-height: 40px; font-size: 25px"><b>GỢI Ý CHO BẠN</b></label>
        </div>
        <div style='width: 30%;height: 2.5px; background-color: #6E573D; margin-left:20px; '></div>

        <div class="ListProducts" ng-controller="ProductsController">

            <div class="col-3 col-m-6 col-s-12">
                <div dir-paginate=" sp in ListProducts.Productss| orderBy:sortcolumn:reverse| itemPerPage:pageSize" total-items="totalCount">
                   
                    <div id="0" class="spnoibat col-3 col-m-3 col-s-6">
                        <img class="product-img" src="~/assets/images/{{sp.Image}}" alt="">
                        <a ng-click="SelectSanPham(sp.ProductID)" href="/DetailProducts/Index"><lable class="product-name">{{sp.ProductsName}}</label></a>
                        <label class="price">{{sp.Price}}</label>
                        <input type="button" class="btn_buy" value="CHỌN MUA"></>
                    </div>
                </div>
            </div>
            <dir-pagination-controls max-size="maxSize"
                                     direction-links="true"
                                     boundary-links=" true"
                                     on-page-change="GetSanPhamTL(newPageNumber)">

            </dir-pagination-controls>

            <div style="clear: both"></div>
        </div>
    </div>
</div>
<script src="~/assets/js/Ex.js"></script>